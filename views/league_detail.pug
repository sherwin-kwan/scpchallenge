//- Location: '/data/league/:id'

extends layout

block content
  h1 #{league_detail.league} (#{league_detail.league_short}) 
  
  ul
    li Number of Teams: #{team_list.length} 
    li Sport: #{league_detail.sport}
  h1 List of Teams

  table
    thead
      tr
        th Team
        th Championships
    tbody
      - team_list.sort(function(a, b) {let textA = a.lastName.toUpperCase(); let textB = b.lastName.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
      each team in team_list
        tr
          td
            a(href=team.url) #{team.city} #{team.teamName}
          td Some number between 0 and 999

  h1 #{league_detail.tournament_name} Structure
  
  table
    thead
      tr
        th Order
        th Round Name
        th Score coefficient
    tbody
      each round in rounds_in_league
        tr
          td
          td
          td

  section(class='foot')
    a(class='btn btn-primary' href= update_url) Edit League
    if team_list.length == 0
      a(class='btn btn-primary' href= delete_url) Delete League



