extends layout

block content
  h1= title

  table
    thead
      tr
        th Team Name
        th League
        th Conference
        th Division
    tbody
    - all_teams.sort(function(a, b) {let textA = a.city.toUpperCase(); let textB = b.city.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
    for team in all_teams
      tr 
        td 
          a(href=team.url) #{team.city} #{team.teamName}
        td #{team.league.league_short}
        td #{team.conference}
        td #{team.division}
    else
      li No teams found!
  
  section(class='foot')
    a.btn.btn-primary(href='team/create') Create New Team